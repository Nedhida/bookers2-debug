
<% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user) do %>
        <%= attachment_image_tag(book_comment.user, :profile_image, fallback: "no-image-icon.jpg", size:'40x40') %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user_id == current_user.id %>
        <%= link_to "Destroy", book_book_comments_path(book_comment.id), method: :delete, remote: true, class:"btn btn-sm btn-danger destroy_book_#{book_comment.id}" %>
      <% end %>
    </td>
  </tr>
<% end %>
<table class='table'>
  <%= form_with(model:[book,book_comment],method: :post, remote: true) do |f| %>
    <%= f.text_area :comment, rows:'5',class:"form-control" %>
    <%= f.submit "送信" %>
  <% end %>
</table>
