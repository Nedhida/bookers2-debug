<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, fallback: "no-image-icon.jpg", size:'40x40') %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <% if fav.favorited_by?(current_user) %>
          <td>
            <%= link_to @favorite_favorites_path(fav),method: :delete do %>
              <div class="pink">ü§ç<%= fav.favorites.count %></div>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to @favorites_path(fav),method: :post do %>
              <div class="blue">ü§ç<%= fav.favorites.count %></div>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>