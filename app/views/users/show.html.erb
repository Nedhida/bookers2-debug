<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <% if @user.id == current_user.id %>
        <%= render 'books/count', data: @data, today_book: @today_book, yesterday_book: @yesterday_book, two_day_book: @two_day_book, three_day_book: @three_day_book, four_day_book: @four_day_book, five_day_book: @five_day_book, six_day_book: @six_day_book %>
      <% end %>
    </div>
  </div>
</div>